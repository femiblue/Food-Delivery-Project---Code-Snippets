{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Dish'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Dish</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Dishid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.dishId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.name }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.description }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Price</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.price }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Image</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.image }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Category</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.category }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Creationdate</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.creationDate|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Updatedate</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.updateDate|date('Y-m-d H:i:s') }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('dish') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('dish_edit', { 'id': entity.dishId }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('dish_delete', { 'id': entity.dishId }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle')|escape('js') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}