{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Shop'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Shop</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Shop id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Shop Name</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopName }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopDescription }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Shop Logo</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopLogo }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Location</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopLocation }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Zip Code</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopZipcode }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Create date</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopCreatedate|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Last Update</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.shopLastupdate|date('Y-m-d H:i:s') }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('shop') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('shop_edit', { 'id': entity.shopId }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('shop_delete', { 'id': entity.shopId }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle')|escape('js') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}